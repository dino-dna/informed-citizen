  "devDependencies": {
    "@types/combined-stream":"^1.0.2",
    "@types/debug": "^4",
    "@types/dotenv-safe": "^5",
    "@types/dotenv":"^6",
    "@types/fs-extra":"^7.0.0",
    "@types/koa-compose":"^3.2.4",
    "@types/koa-helmet":"^3.1.2",
    "@types/koa-router": "^7.0.40",
    "@types/koa-static":"^4.0.1",
    "@types/koa": "^2.0.48",
    "@types/lodash":"^4.14.134",
    "@types/node-fetch": "^2.3.3",
    "@types/node":"^12",
    "@types/parcel-bundler":"^1.12.0",
    "@types/pg": "^7.4.14",
    "@types/pino": "^5.8.6",
    "@types/reach__router":"^1",
    "@types/react-redux": "^7.0.8",
    "@types/redux-logger":"^3.0.7",
    "@types/redux": "^3.6.0",
    "del-cli":"^2.0.0",
    "nodemon": "^1.18.11",
    "npm-run-all":"^4.1.5",
    "react-scripts":"^3.0.1",
    "react-styleguidist": "^9.0.9",
    "react-docgen-typescript":"^1.12.5"
  },
  "scripts": {
    "build:docker": "docker build -t cdaringe/cronkite .",
    "build": "tsc",
    "clean": "del knexfile.js knexfile.js.map '{src,scripts}/**/*{.js,.map,.d.ts}'",
    "create:migration": "knex --knexfile knexfile.ts migrate:make -x ts",
    "link:env-files": "if [[ ! -f .env || ! -f .env.example ]]; then npx ts-node scripts/link-env.ts; fi;",
    "migrate:db:down": "knex --knexfile knexfile.ts migrate:rollback",
    "migrate:db:up": "knex --knexfile knexfile.ts migrate:latest",
    "migrate": "run-s migrate:db:down migrate:db:up",
    "prebuild": "run-p clean",
    "prestart": "run-s link:env-files migrate",
    "start": "nodemon --exec node --inspect -r 'ts-node/register' src/bin.ts",
    "styleguide": "styleguidist server"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": ["src/**/*.test.ts", "src/ui/**/*.ts", "**/*.js", "**/*.map"],
    "watch": [
      "src/**/*.ts"
    ]
  }
}
