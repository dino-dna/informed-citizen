    "koa-parcel-middleware":"^1.0.2",
    "koa-router": "^7.4.0",
    "koa-static":"^5.0.0",
    "koa": "^2.7.0",
    "lodash":"^4.17.19",
    "node-fetch":"^2.4.1",
    "isomorphic-fetch":"^2.2.1",
    "papercss": "^1.6.1",
    "parcel-bundler":"^1.12.3",
    "perish": "^1.0.2",
    "pg":"^7.11.0",
    "pino": "^5.12.3",
    "react-css-spinners": "^1.0.1",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react": "^16.8.6",
    "redux-logger":"^3.0.6",
    "redux-observable": "^1.1.0",
